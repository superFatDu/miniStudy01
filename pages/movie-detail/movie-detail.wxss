/* pages/movie-detail/movie-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}
.head-img {
  width: 100%;
  height: 320rpx;
  filter: blur(10px);
}
.head-img-hover {
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 40rpx;
}
.main-title {
  font-size: 38rpx;
  color: #ffffff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top: 50rpx;
}
.sub-title {
  font-size: 28rpx;
  color: #ffffff;
  letter-spacing: 2px;
  margin-top: 30rpx;
}
.like {
  margin-top: 30rpx;
}
.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.plain-font {
  color: #999999;
  font-size: 22rpx;
  margin-right: 30rpx;
}
.movie-img {
  width: 175rpx;
  height: 238rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}
.summary {
  margin-top: 40rpx;
  padding-left: 40rpx;
  padding-bottom: 45rpx;
  border-bottom: 1px solid #d9d9d9;
}
.flex-flow {
  margin-bottom: 10rpx;
}
.original-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.rate-score {
  margin-left: 20rpx;
}
.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999999;
}
.synopsis {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  padding-left: 40rpx;
  padding-bottom: 45rpx;
  border-bottom: 1px solid #d9d9d9; 
}
.synopsis-font {
  color: #999999;
}
.summary-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}
.casts {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  padding-left: 40rpx;
  padding-bottom: 50rpx;
}
.cast-img {
  width: 170rpx;
  height: 210rpx;
}
.cast-font {
  color: #999999;
  margin-bottom: 40rpx;
}
.casts-container {
  display: flex;
  height: 250rpx;
}
.cast-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}
.cast-img {
  margin-bottom: 10rpx;
}