/* pages/post-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
  position: relative;
}
.head-img {
  width: 100%;
  height: 460rpx;
}
.audio {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  top: 180rpx;
  margin-left: -50rpx;
  opacity: 0.6;
}
.author-date {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666666;
}
.const-text {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}
.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999999;
}
.title {
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  margin: 30rpx 0 20rpx 40rpx;
  color: #4b556c;
}
.tool {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 30rpx;
}
.circle-img {
  width: 60rpx;
  height: 60rpx;
  padding: 15rpx;
  border-radius: 50%;
  background-color: #e5e5e5;
}
.circle-img:first-child {
  margin-right: 30rpx;
}
.detail {
  color: #666666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}